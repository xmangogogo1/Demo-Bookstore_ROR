<% if notice %>
	<p id="notice">
		<%= notice %>
	</p>
<% end %>

<h1>Product Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image) %>
    
    <h3><%= link_to "#{product.name}", showshopper_path(product)%></h3>
     <!--link_to "product", controller: "shopper", action: "show", id: product-->

  
    
    <p><%= sanitize(product.description) %></p>

    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span>

      <%= button_to "Add to Cart", line_items_path(product_id: product), class: 'add_to_cart', remote: true %> 
      <!-- remote: true means using ajax, this button is sending ajax request to line_items_controller -->
      
       <!-- without the remote:true, this button_to helper function send a html form with post req to line_items_controller --> 
    </div>

  </div>
<% end %>

